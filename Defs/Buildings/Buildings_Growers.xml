<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>Chinampa</defName>
        <label>chinampa</label>
        <description>A floating garden, or chinampa, used for farming on water or swampy terrain. Requires wood and hay to construct.</description>
       <thingClass>DIL_ChinampaFarming.BuildingChinampa</thingClass>
        <graphicData>
            <texPath>Things/Building/Chinampa/Chinampa</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <castEdgeShadows>false</castEdgeShadows>
        <altitudeLayer>LowPlant</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <statBases>
            <WorkToBuild>400</WorkToBuild>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>0.6</Flammability>
            <Beauty>-4</Beauty>
            <Cleanliness>-3</Cleanliness>
        </statBases>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <alwaysDeconstructible>true</alwaysDeconstructible>
            <defaultPlantToGrow>Plant_Rice</defaultPlantToGrow>
            <sowTag>Hydroponic</sowTag>
            <buildingTags>
        <li>Production</li>
      </buildingTags>
        </building>
        
        <costList>
            <WoodLog>7</WoodLog>
            <Hay>5</Hay>
        </costList>
        <canOverlapZones>false</canOverlapZones>
        <pathCost>30</pathCost>
        <size>(1,1)</size>
        <designationCategory>Production</designationCategory>
        <terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
        <rotatable>false</rotatable>
        <tickerType>Normal</tickerType>
        <category>Building</category>
        <useHitPoints>true</useHitPoints>
        <selectable>true</selectable>
        <seeThroughFog>true</seeThroughFog>
        <scatterableOnMapGen>false</scatterableOnMapGen>
        <comps>
            <li Class="CompProperties_Forbiddable" />
        </comps>
        <fertility>1.8</fertility>
    </ThingDef>
</Defs>